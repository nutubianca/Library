<hibernate-mapping>
    <class name="iss.library.libraryiss1.model.Librarian" table="librarians">
        <id name="id" column="id">
            <generator class="increment"/>
        </id>
        <property name="name"
                  column="name"
                  type="string"/>
        <property name="username"
                  column="username"
                  type="string"/>
        <property name="password"
                  column="password"
                  type="string"/>
        <property name="salary"
                  column="salary"
                  type="int"/>
    </class>
</hibernate-mapping>