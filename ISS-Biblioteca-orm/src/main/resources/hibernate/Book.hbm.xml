<hibernate-mapping>
    <class name="iss.library.libraryiss1.model.Book" table="books">
        <id name="id" type="java.lang.Integer">
            <generator class="increment"/>
        </id>
        <property name="title"
                  column="title"
                  type="java.lang.String"/>
        <property name="author"
                  column="author"
                  type="java.lang.String"/>
        <property name="genre"
                  column="genre"
                  type="java.lang.String"/>
        <property name="quantity"
                  column="quantity"
                  type="int"/>
    </class>
</hibernate-mapping>